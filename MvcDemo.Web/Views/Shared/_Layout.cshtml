@using MvcDemo.Web.Services
@{
    Resources = DependencyResolver.Current.GetService<LocalizationService>();
}
<!DOCTYPE html>

<html>
<head id="head">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta charset="UTF-8" />
    <title>@ViewBag.Title - Dancing Goat</title>
    <link href="@Url.Content("~/Content/Styles/Site.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="page-wrap">
        <header class="header" role="banner">
            <div class="menu">
                <div class="container">
                    <nav role="navigation">
                        <ul>
                            <li>
                                @Html.ActionLink(Resources.GetString("TestMvcDemo.Home"), "Index", "Home")
                            </li>
                            <li>
                                @Html.ActionLink(Resources.GetString("TestMvcDemo.Articles"), "Index", "Articles")
                            </li>
                            <li>
                                @Html.ActionLink(Resources.GetString("TestMvcDemo.AboutUs"), "Index", "About")
                            </li>
                            <li>
                                @Html.ActionLink(Resources.GetString("TestMvcDemo.Cafes"), "Index", "Cafes")
                            </li>
                            <li>
                                @Html.ActionLink(Resources.GetString("TestMvcDemo.Contact"), "Index", "Contacts")
                            </li>
                        </ul>
                    </nav>
                    <div class="additional-menu-buttons user-menu">
                        <nav role="navigation">
                            <ul class="dropdown-items-list dropdown-desktop-visible">
                                <li>
                                    @Html.ActionLink("English", "Index", "Home", new { culture = "en-US"}, null)
                                </li>
                                <li>
                                    @Html.ActionLink("Español", "Index", "Home", new { culture = "es-ES"}, null)
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
            <div class="header-row">
                <div class="container">
                    <div class="col-xs-8 col-md-5 col-lg-4 logo">
                        <h1 class="logo">
                            @Html.ActionLink("Dancing Goat", "Index", new { controller = "Home" }, new { @class = "logo-link" })
                        </h1>
                    </div>
                    <div class="col-xs-12 col-md-7 col-lg-8">
                        @using (Html.BeginForm("Index", "Search", FormMethod.Get, new { @Id = "searchForm", @Class = "searchBox" }))
                        {
                            <input type="text" id="searchtext" name="searchtext" placeholder="@Resources.GetString("general.search")" maxlength="1000" class="search-box-watermark" autocomplete="off">
                            <input type="submit" value="" class="search-box-btn">
                        }
                    </div>
                </div>
            </div>
        </header>
        <div class="container">
            @RenderBody()
        </div>
    </div>
    <div class="footer-wrapper">
        <footer role="contentinfo">
            <div class="footer-container">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4 col-lg-4 footer-col">
                            <h3 class="contact-title">@Resources.GetString("TestMvcDemo.Contact.Title")</h3>
                            <p>
                                @Html.Action("CompanyAddress", "Contacts")
                            </p>
                        </div>
                        <div class="col-md-4 col-lg-4 footer-col">
                            <h3>@Resources.GetString("TestMvcDemo.FollowUs.Title")</h3>
                            @Html.Action("CompanySocialLinks", "Contacts")
                        </div>
                        <div class="col-md-4 col-lg-4 footer-col">
                            <h3>@Resources.GetString("TestMvcDemo.News.Title")</h3>
                            @Html.Action("Show", "Subscription")
                        </div>
                    </div>
                </div>
            </div>
            <div class="container copyright">
                Copyright &copy; 2014 Dancing Goat. All rights reserved.
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>
