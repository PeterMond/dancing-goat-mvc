@model IEnumerable<CMS.DocumentEngine.Types.AboutUsSection>

@{
    ViewBag.Title = Resource.GetString("TestMvcDemo.AboutUs");
    int i = 0;
}

@foreach (var aboutSection in Model)
{
    <section class="row text-and-image">
        <h2 class="col-lg-12">@aboutSection.AboutUsSectionHeading</h2>
        @if (i++ % 2 == 0)
        {
            <div class="col-md-6">
                <div class="text-and-image-text">
                    @Html.Raw(aboutSection.AboutUsSectionText)
                </div>
            </div>
            <div class="col-md-6">
                <img alt="@aboutSection.AboutUsSectionHeading" src="@Url.Attachment(aboutSection.AboutUsSectionImage, null)" class="img-responsive" />
            </div>
        }
        else
        {
            <div class="col-md-6 col-md-push-6">
                <div class="text-and-image-text-right">
                    @Html.Raw(aboutSection.AboutUsSectionText)
                </div>
            </div>
            <div class="col-md-6 col-md-pull-6">
                <img alt="@aboutSection.AboutUsSectionHeading" src="@Url.Attachment(aboutSection.AboutUsSectionImage, null)" class="img-responsive" />
            </div>
        }
    </section>
}
