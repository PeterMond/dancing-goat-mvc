@model IEnumerable<CMS.DocumentEngine.Types.Article>

@{
    ViewBag.Title = Resources.GetString("TestMvcDemo.Articles");
    var i = 1; 
}

@foreach (var article in @Model)
{
    <div class="col-md-3">
        <div class="article-tile">
            <a href="@Url.Action("Show", "Articles", new { id = article.NodeID })">
                @Html.AttachmentImage(article.Fields.Teaser, "Article " + article.Fields.Title, "article-tile-image", SizeConstraint.Height(200))
            </a>
            <div class="article-tile-date">
                @article.PublicationDate.ToString("m")
            </div>
            <div class="article-tile-content">
                <h2 class="h4">
                    <a href="@Url.Action("Show", "Articles" , new { id=article.NodeID })">@article.Fields.Title </a>
                </h2>
                <p class="article-tile-text">
                    @article.Fields.Summary
                </p>
            </div>
        </div>
    </div>
    if (i % 4 == 0)
    {
        <div class="clear"></div>
    }
    i++;
}
@DateTime.Now.ToLongTimeString()